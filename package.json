{
  "name": "chaishots-cms",
  "version": "1.0.0",
  "description": "Mini CMS for managing Programs → Terms → Lessons with scheduled publishing",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:api\" \"npm run dev:web\"",
    "dev:api": "cd api && npm run dev",
    "dev:web": "cd web && npm run dev",
    "build": "npm run build:api && npm run build:web",
    "build:api": "cd api && npm run build",
    "build:web": "cd web && npm run build",
    "start": "node api/dist/main.js",
    "seed": "cd api && npm run seed",
    "migrate": "cd api && npx prisma migrate dev",
    "docker:up": "docker-compose up --build"
  },
  "keywords": ["cms", "api", "education", "content-management"],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.0"
  }
}